{
  "name": "@chord-ts/rebac",
  "version": "0.0.1",
  "packageManager": "pnpm@10.11.0",
  "description": "The onward way to use ReBAC systems in TypeScript",
  "type": "module",
  "license": "Apache-2.0",
  "homepage": "https://github.com/chord-ts/rebac#readme",
  "bugs": {
    "url": "https://github.com/chord-ts/rebac/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chord-ts/rebac.git"
  },
  "author": "Dmitriy Din",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./adapters": "./dist/adapters",
    "./helpers": "./dist/helpers"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "setup:permify": "tsx ./rebac/permify/setup.ts",
    "dev": "tsx ./src/dev.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.0.1",
    "@sxzz/prettier-config": "^2.2.1",
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.26.0",
    "prettier": "^3.5.3",
    "tsdown": "^0.11.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "prettier": "@sxzz/prettier-config",
  "dependencies": {
    "@permify/permify-node": "^1.0.9"
  }
}
